<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="180.0" minWidth="360.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SecondaryController">
   <children>
      <VBox alignment="CENTER" prefHeight="180.0" prefWidth="360.0" spacing="20.0">
          <children>
              <Label text="Store Login" />
            <GridPane VBox.vgrow="NEVER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="155.0" minWidth="10.0" prefWidth="91.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="229.0" minWidth="10.0" prefWidth="229.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="EmployeeID" />
                  <Label text="Password" GridPane.rowIndex="1" />
                  <PasswordField fx:id="employeePasswordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="employeeIDTextField" GridPane.columnIndex="1" />
               </children>
            </GridPane>
              <Button fx:id="loginButton" onAction="#onLoginButtonPressed" text="Login" />
          </children>
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      </VBox>
   </children>
</AnchorPane>
